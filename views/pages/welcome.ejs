<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="/src/css/welcomepage.css" />

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>

<body class="container">
    <main>
        <div id="loginRegisterCon">
            <!--welcome page-->
            <div id='welcomeMoment'>
                any Wear<br />
                Worry-free Traveling.<br />
                <button id='buttonIn' class="btn yellow darken-2">To Sign In</button>
                <button id='buttonUp' class="btn yellow darken-2">To Sign Up</button>
            </div>

            <!--sign in page-->
            <div id='signInMoment'>
                <form method="post" action="/login">

                    <div class='input-field'>
                        <input type="text" id="userNameForSignIn" class="validate" required="required" />
                        <label for="userNameForSignIn">User Name</label>
                    </div>
                    <div class='input-field'>
                        <input type="password" id="pwdForSignIn" required="required" />
                        <label for="pwdForSignIn">Password</label>
                    </div>

                    <!-- <input type="checkbox" />
                    <label class="form-check-label" for="inlineFormCheck">
                        Remember me
                    </label> -->
                    <a href='#'>Forgot password?</a>
                    <a href='#' id='buttonUp1'>Register?</a>
                    <br />
                    <button id='backToWelcom1'>Back to the main</button>
                    <button type="submit" id="signedIn">Sign In</button>

                </form>
            </div>

            <!--sign up page-->
            <div id='signUpMoment'>
                <form method="post" action="/register">
                    <div id='margin' class="row">

                        <div id='margin' class='input-field col s12'>
                            <input type="text" id="userName" pattern="[A-Za-z]{8,20}" required="required" title="This will be your user name!" />
                            <label for="userName">User Name *</label>
                        </div>
                    </div>
                    <div id='margin' class='row'>

                        <div id='margin' class='input-field col s6'>
                            <input type="password" id="pwd" pattern="[A-Za-z0-9]{8,20}" required="required" title="Password must be 8-20 characters long." />
                            <label for="pwd">Password *</label>
                        </div>

                        <div id='margin' class='input-field col s6'>
                            <input type="password" id="cfpwd" pattern="[A-Za-z0-9]{8,20}" required="required" />
                            <label for="cfpwd">Confirm Password </label>
                        </div>
                    </div>
                    <div id='margin' class='row'>

                        <div id='margin' class='input-field col s6'>
                            <input type="email" id="email" title="This will be used only when you forget your password." />
                            <label for="email">Email *</label>
                        </div>
                        <div id='margin' class='input-field col s6'>
                            <input type="email" id="cfemail" />
                            <label for="cfemail">Confirm Email</label>
                        </div>
                    </div>
                    <div id='margin' class='row'>

                        <div id='margin' class='input-field col s6'>
                            <input type="number" id="age" min="18" max="100" title="This will be used only for statistical purpose." />
                            <label for="age">Age</label>
                        </div>
                        <div id='margin' class="row">

                            <div id='margin' class='input-field col s6'>
                                <select>
                                    <option value="" disabled selected>Gender</option>
                                    <option value="female">Female</option>
                                    <option value="male">Male</option>
                                    <option value="prefernottosay">Prefer not to say</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div id='margin' class="file-field input-field">
                        <div class="btn yellow darken-2">
                            <span>File</span>
                            <input type="file">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="Your Photo">
                        </div>
                    </div>

                    <!-- <input type="file" name="file" id="uploadPhoto" />
                    <label for="file" id="uploadPhoto1" title="The clearer, the better :)">Choose a photo :)</label>
                    <br /> -->
                    <button id='backToWelcom2' class="btn yellow darken-2">Back to the main</button>
                    <button type="submit" id="signedUp" class="btn yellow darken-2">Sign Up</button>

                </form>

            </div>
        </div>

    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>
        window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')
    </script>

    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="./src/js/welcomepage.js"></script>
</body>

</html>
